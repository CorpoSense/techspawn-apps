<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_purchase_order_form_view" model="ir.ui.view">
        <field name="name">custom.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="date_order" position="after">
                <field name="po_released_person"/>
            </field>
        </field>
    </record>
    <record id="custom_purchase_order_tree_view" model="ir.ui.view">
        <field name="name">custom.purchase.order.tree.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="po_released_person"/>
            </field>
        </field>
    </record>
</odoo>